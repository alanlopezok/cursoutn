<div class="container" style="margin-top: 100px;">
    {{!-- fila 1 --}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}</span>
                <a href="/admin/login/logout" class="btn btn-danger"> Cerrar sesión <i class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
<div class="row">
    <div class="col-7" style="margin-top: -9px;">
        <h2>Listado de Novedades</h2>
    </div>
    <div class="col-5 text-end">
        <a href="/admin/novedades/agregar" class="btn btn-success"> <i class="fas fa-plus"></i> Nuevo </a>
    </div>
</div>


<div class="row">
    <div class="col-sm-12">
        <table class="table">
            <thead>
                <tr class="table-dark">
                    <th scope="col">#</th>
                    <th scope="col">Título</th>
                    <th scope="col" class="text-right">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{this.titulo}}</td>
                    <td class="text-right">
                        <a href="/admin/novedades/modificar/{{this.id}}" class="btn btn-secondary">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="/admin/novedades/eliminar/{{this.id}}" class="btn btn-secondary">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>
</div>